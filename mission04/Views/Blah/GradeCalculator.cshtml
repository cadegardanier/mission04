@{
    ViewData["Title"] = "Grade Calculator!";
}

@model GradeCalculatorModel

<h1>Grade Calculator</h1>
<form name="Grade Calculator" method="post">
    <label>Assignments:</label>
    <input type="number" id="assignments" asp-for="Assignments" />  <br />
    <label>Quizzes:</label>
    <input type="number" id="quizzes" asp-for="Quizzes" /> <br />
    <label>Group Projects:</label>
    <input type="number" id="groupprojects" asp-for="Groupprojects" /> <br />
    <label>INTEX:</label>
    <input type="number" id="intex" asp-for="Intex" /> <br />
    <label>Midterm:</label>
    <input type="number" id="midterm" asp-for="Midterm" /> <br />
    <label>Final:</label>
    <input type="number" id="final" asp-for="Final" /> <br /> <br />
    <input id="calc" type="submit" value="Calculate Grade" />
    <br />
    <br />
    <h3 id='output'></h3>

    <div asp-validation-summary="All"></div>
</form>
